	journal = {Journal of Geophysical Research: Oceans},
	author = {Armi, Laurence and D'Asaro, Eric},
	year = {1980},
	note = {\_eprint: https://agupubs.onlinelibrary.wiley.com/doi/pdf/10.1029/JC085iC01p00469},
	pages = {469--484},
}

