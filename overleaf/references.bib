	year = {2019},
	note = {Publisher: Frontiers},
	keywords = {Deep currents, Deep turbulence, In situ observation, Internal waves and tides, realistic modeling, transport},
}

@article{ruan_mixing-driven_2020,
	title = {Mixing-{Driven} {Mean} {Flows} and {Submesoscale} {Eddies} over {Mid}-{Ocean} {Ridge} {Flanks} and {Fracture} {Zone} {Canyons}},
