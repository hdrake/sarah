@article{murphy_transient_1995-1,
	title = {Transient {Response} of the {Hadley} {Centre} {Coupled} {Ocean}-{Atmosphere} {Model} to {Increasing} {Carbon} {Dioxide}. {Part} 1: {Control} {Climate} and {Flux} {Adjustment}},
