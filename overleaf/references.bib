	journal = {Journal of Geophysical Research: Oceans},
	author = {Danabasoglu, Gokhan and Large, William G. and Briegleb, Bruce P.},
	year = {2010},
	note = {\_eprint: https://agupubs.onlinelibrary.wiley.com/doi/pdf/10.1029/2010JC006243},
