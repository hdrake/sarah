@article{murphy_transient_1995,
	title = {Transient {Response} of the {Hadley} {Centre} {Coupled} {Ocean}-{Atmosphere} {Model} to {Increasing} {Carbon} {Dioxide}. {Part} {II}: {Spatial} and {Temporal} {Structure} of {Response}},
