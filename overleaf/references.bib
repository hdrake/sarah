	school = {Massachusetts Institute of Technology},
	author = {Kaiser, Bryan Edward},
	year = {2020},
	note = {Accepted: 2020-10-18T21:45:36Z},
}

@article{marchal_nonuniform_2004,
	title = {Nonuniform {Upwelling} in a {Shallow}-{Water} {Model} of the {Antarctic} {Bottom} {Water} in the {Brazil} {Basin}},
